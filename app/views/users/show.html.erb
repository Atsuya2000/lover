<main class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="py-5">
        <table class="table">
          <tbody>
            <tr>
              <th>
                <div class="img">
                  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.png", size: "300x300", class: "user_profile_image" %>
                </div>
              </th>
          	  <th class="py-5"><%= @user.name %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(current_user), class: 'btn btn-light' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>
    </div>
    <% if current_user != @user %>
      <%= link_to 'チャットする', chat_path(@user.id) %>
    <% end %>
  </div>
</main>