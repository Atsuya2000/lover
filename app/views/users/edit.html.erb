<main class="container">
  <h2 class="py-5"></h2>
  <%= form_with model:@user, local:true do |f| %>
    <div class="py-3 text-center">
      <label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="py-3 text-center">
      <label for="inputImage">Image</label>
      <%= f.attachment_field :image, autofocus: true %>
    </div>
    <div class="py-3 text-center">
      <label for="inputIntroduction">Introduction</label>
      <%= f.text_field :introduction, autofocus: true %>
    </div>
    <div class="py-3 text-center">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
  <%if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this fashion from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
</main>
