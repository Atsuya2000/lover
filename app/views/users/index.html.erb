<main class="container">
  <div class="col-md-10 offset-md-1">
    <div class="py-5">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user.id) do %>
                  <div class="img">
                  <%= attachment_image_tag user, :profile_image, fallback: "no_image.png", size: "40x40", class: "user_profile_image" %>
                </div>
                <% end %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user.id), class: 'btn btn-light' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>
